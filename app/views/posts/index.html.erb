<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<% if @user_id %>
<%= link_to "New post", new_post_path %>
<% end %>

<div style="margin-top:2rem"> 
  <%= link_to "Login", new_login_path %>
</div>