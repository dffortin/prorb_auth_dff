<h1>Sign up</h1>

<%= form_with model: @user, url: registrations_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div style="margin-top:1rem">
    <%= form.submit "Sign Up" %>
  </div>
<% end %>

<div style="margin-top:2rem"> 
  <%= link_to "Login", new_login_path %>
</div>